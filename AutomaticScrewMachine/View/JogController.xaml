<UserControl
    x:Class="AutomaticScrewMachine.View.JogController"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutomaticScrewMachine.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1600"
    Background="Transparent"
    DataContext="{Binding JogControllerViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../DesignGUI.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="400" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Background="{DynamicResource DeepNaby}"
                CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Background="#FF0E3B61"
                        CornerRadius="10"
                        Opacity="0.3" />
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="Category" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="PositionValue" />

                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="SIGNAL" />
                    </Grid>



                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="Position X" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="{Binding PositionValueX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Border
                            x:Name="buzzerPositionX"
                            Grid.Column="2"
                            Width="50"
                            Height="50"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Gray"
                            CornerRadius="50" />
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="Position Y" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="{Binding PositionValueY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Border
                            x:Name="buzzerPositionY"
                            Grid.Column="2"
                            Width="50"
                            Height="50"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Gray"
                            CornerRadius="50" />
                    </Grid>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="Position Z" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="{Binding PositionValueZ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Border
                            x:Name="buzzerPositionZ"
                            Grid.Column="2"
                            Width="50"
                            Height="50"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Gray"
                            CornerRadius="50" />
                    </Grid>

                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="Encoder" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="Value Encoder" />
                        <Border
                            Grid.Column="2"
                            Width="50"
                            Height="50"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Gray"
                            CornerRadius="50" />
                    </Grid>

                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="8*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="Encoder ll" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="Value Encoder ll" />
                        <Border
                            Grid.Column="2"
                            Width="50"
                            Height="50"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Gray"
                            CornerRadius="50" />
                    </Grid>

                </Grid>
            </Border>

            <Border
                Grid.Row="1"
                Background="{DynamicResource CustomSliderForegroundBrush}"
                CornerRadius="20" />
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <!--  JOG STRAIGHT  -->
                <Border
                    x:Name="JogStraightBtn"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="15"
                    MouseDown="JogStop_MouseDown"
                    MouseUp="JogStop_MouseUp"
                    Style="{StaticResource RoundedBorderStyle}">
                    <Border.Background>
                        <ImageBrush ImageSource="../Assets/btn_jog_up.png" />
                    </Border.Background>
                </Border>

                <!--  JOG BACK  -->
                <Border
                    x:Name="JogBackBtn"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="15"
                    MouseDown="JogStop_MouseDown"
                    MouseUp="JogStop_MouseUp"
                    Style="{StaticResource RoundedBorderStyle}">
                    <Border.Background>
                        <ImageBrush ImageSource="../Assets/btn_jog_down.png" />
                    </Border.Background>
                </Border>

                <!--  JOG LEFT  -->
                <Border
                    x:Name="JogLeftBtn"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="15"
                    MouseDown="JogStop_MouseDown"
                    MouseUp="JogStop_MouseUp"
                    Style="{StaticResource RoundedBorderStyle}">
                    <Border.Background>
                        <ImageBrush ImageSource="../Assets/btn_jog_left.png" />
                    </Border.Background>
                </Border>

                <!--  JOG RIGHT  -->
                <Border
                    x:Name="JogRightBtn"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="15"
                    MouseDown="JogStop_MouseDown"
                    MouseUp="JogStop_MouseUp"
                    Style="{StaticResource RoundedBorderStyle}">
                    <Border.Background>
                        <ImageBrush ImageSource="../Assets/btn_jog_right.png" />
                    </Border.Background>
                </Border>

                <!--  JOG STOP  -->
                <Border
                    x:Name="JogStopBtn"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="15"
                    MouseDown="JogStop_MouseDown"
                    MouseUp="JogStop_MouseUp"
                    Style="{StaticResource RoundedBorderStyle}">
                    <Border.Background>
                        <ImageBrush ImageSource="../Assets/btn_jog_stop.png" />
                    </Border.Background>
                </Border>


                <!--  JOG UP  -->
                <Border
                    x:Name="JogUpBtn"
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="15"
                    MouseDown="JogStop_MouseDown"
                    MouseUp="JogStop_MouseUp"
                    Style="{StaticResource RoundedBorderStyle}">
                    <Border.Background>
                        <ImageBrush ImageSource="../Assets/btn_screw_up.png" />
                    </Border.Background>
                </Border>

                <Border
                    x:Name="JogReturnBtn"
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="15"
                    MouseDown="JogStop_MouseDown"
                    MouseUp="JogStop_MouseUp"
                    Style="{StaticResource RoundedBorderStyle}">
                    <Border.Background>
                        <ImageBrush ImageSource="../Assets/btn_screw_return.png" />
                    </Border.Background>
                </Border>

                <Border
                    x:Name="JogDownBtn"
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="15"
                    MouseDown="JogStop_MouseDown"
                    MouseUp="JogStop_MouseUp"
                    Style="{StaticResource RoundedBorderStyle}">
                    <Border.Background>
                        <ImageBrush ImageSource="../Assets/btn_screw_down.png" />
                    </Border.Background>
                </Border>


                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="White"
                    Text="Move Speed" />

                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="20"
                    Foreground="White"
                    Text="00" />
            </Grid>

        </Grid>
    </Grid>
</UserControl>